<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootNode" alignment="CENTER" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="clientApp.Controller">
    <HBox>
        <TextField fx:id="console" focusTraversable="false" promptText="Укажите имя файла" HBox.hgrow="ALWAYS" />
        <Button onAction="#pressOnDownloadBtn" text="Download" />
        <Button onAction="#pressOnUploadBtn" text="Upload" />
        <Button onAction="#pressOnDeleteBtn" text="Delete" />
    </HBox>
    <ListView fx:id="clientFileList" VBox.vgrow="ALWAYS" />
    <ListView fx:id="serverFileList" VBox.vgrow="ALWAYS" />
</VBox>